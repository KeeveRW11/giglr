<article class="my-3">
    <a href="/post/{{id}}" class="text-dark">
        <div class="card border border-dark" style="max-width: 480px;">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
            </div>
            <img src="{{post_url}}" class="card-img-top img-fluid" alt="...">
            
            <div class="card-body">
                <h5 class="card-text mb-3">By: {{user.username}}</h5>
                <div class="d-flex justify-content-around flex-wrap">
                    <span class="text-dark">{{vote_count}} <i class="fa-regular fa-circle-up"></i></span>
                    <span class="text-dark">{{comments.length}} <i class="fa-regular fa-comment"></i></span>
                </div>                    
            </div>
        </div>   
    </a>                   
</article> 

