<form action="" id="login-form" class="mt-3">
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label for="user-username">Username</label>
                <input type="text" class="form-control" id="user-username" aria-describedby="usernameHelp">                        
                </div>
                <div class="form-group">
                <label for="user-password">Password</label>
                <input type="password" class="form-control" id="user-password">
                <small id="login-redirection" class="form-text text-muted">Don't have an account? <a href="/signup">Signup</a></small>
                </div>                      
                <button type="submit" id="logbtn" class="btn btn-dark">Login</button>
            </div>
        </div>
    </div>
</form>

<script src="/js/login.js"></script>