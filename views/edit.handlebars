<section class="d-flex justify-content-around flex-wrap">
    <form action="" class="mt-3" id="edit-meme-form">
        <div class="card border border-dark" style="max-width: 480px;">
            <div class="card-body">
                <input type="text" name="post-title" value="{{Post.title}}">
            </div>
            <img src="{{post.image}}" class="card-img-top img-fluid" alt="...">
            
            <div class="card-body">
                <h5 class="card-text">By: {{post.username}}</h5>
                <div class="d-flex justify-content-between flex-wrap">
                    <a href="#" class="card-link text-dark">{{post.upvote}}<i class="fa-regular fa-thumbs-up"></i></a>
                    <a href="#" class="card-link text-dark">{{post.downvote}}<i class="fa-regular fa-thumbs-down"></i></a>
                    <a href="#" class="card-link text-dark">{{post.comment.length}} {{format_pluralize "comment" post.comment.length}}</a>                    
                </div>                    
            </div>
            <div class="card-body">
                <button type="submit" class="btn btn-dark">Save</button>
            </div>
        </div>
    </form>        
</section>

<script src="/js/edit.js"></script>